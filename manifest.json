{
  "manifest_version": 3,
  "name": "Auto Pomodoro + Reminders",
  "description": "Starts a Pomodoro cycle at work-start time daily. 25/5 Ã—3 + 15 on 4th. Local reminders by clock time.",
  "version": "1.0.0",
  "permissions": ["alarms", "notifications", "storage", "offscreen"],
  "background": { "service_worker": "background.js" },
  "action": { "default_popup": "popup.html", "default_title": "Pomodoro" },
  "options_ui": { "page": "options.html", "open_in_tab": true },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}